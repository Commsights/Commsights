@{ ViewData["Title"] = "Scan"; }

@model Commsights.MVC.Models.BaseViewModel

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Data - Scan</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class='col-sm-4'>
                        @(Html.Kendo().DropDownList()
                     .Name("Website")
                     .DataValueField("ID")
                     .DataTextField("DisplayName")
                     .HtmlAttributes(new { @class = "form-control" })
                      .Events(e => e.DataBound("onWebsiteDataBound").Change("onWebsiteChange"))
                       .Filter(FilterType.StartsWith)
                     .DataSource(dataSource => dataSource.Ajax().Read(t => t.Action("GetDataTransferWebsiteByGroupNameAndCodeAndActiveToList", "Config")))
                            )
                    </div>
                    <div class='col-sm-4'>
                        <button type="button" class="btn btn-primary" onclick="onScanWebsite()">
                            <span class="fas fa-sync-alt"></span> Scan website
                        </button>
                    </div>
                    <div class='col-sm-4'>
                        <button type="button" class="btn btn-primary" onclick="onScanWebsiteNoFilterProduct()">
                            <span class="fas fa-sync-alt"></span> Scan website no filter
                        </button>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class='col-sm-4'>
                        <button type="button" class="btn btn-primary" onclick="onScanAutoNoFilterProduct()">
                            <span class="fas fa-sync-alt"></span> Scan auto no filter
                        </button>
                    </div>
                    <div class='col-sm-4'>
                        <button type="button" class="btn btn-primary" onclick="onScanFullNoFilterProduct()">
                            <span class="fas fa-sync-alt"></span> Scan full no filter
                        </button>
                    </div>
                    <div class='col-sm-4'>
                        <button type="button" class="btn btn-primary" onclick="onScanFull()">
                            <span class="fas fa-sync-alt"></span> Scan full
                        </button>
                    </div>
                </div>
                @(Html.Kendo().Grid<Commsights.Data.Models.Config>()
.Name("Config")
.Columns(columns =>
{
    columns.Bound(t => t.IsMenuLeft).Title("Is RSS").Width(100);
    columns.Bound(t => t.Title).Title("Title").Width(200);
    columns.Bound(t => t.URLFull).Title("URLFull").Width(400);
    columns.Bound(t => t.SortOrder).Title("Sort order").Width(200);
})
.ToolBar(toolBar => toolBar.Search())
.Editable(editable => editable.Mode(GridEditMode.InLine))
.Sortable()
.Scrollable()
.Reorderable(r => r.Columns(true))
.Resizable(r => r.Columns(true))
.Pageable(pageable => pageable
.Refresh(true)
.PageSizes(true)
.ButtonCount(10))
.Excel(excel => excel
.FileName("Config.xlsx")
.Filterable(true)
.ProxyURL(Url.Action("ExportExcel", "Config"))
)
.Pdf(pdf => pdf
.AllPages()
.AvoidLinks()
.PaperSize("A4")
.Margin("2cm", "1cm", "1cm", "1cm")
.Landscape()
.RepeatHeaders()
.FileName("Config.pdf")
)
.HtmlAttributes(new { @class = "KendoGrid" })
.Search(search => { search.Field(f => f.Title); search.Field(f => f.URLFull);})
.DataSource(dataSource => dataSource
.Ajax()
.PageSize(1000)
.Model(model =>
{
    model.Id(t => t.ID);
})
.Read(t => t.Action("GetWebsiteByParentIDAndGroupNameAndCodeToList", "Config").Data("filterConfig"))
)
)
            </div>
        </div>
    </div>
</div>



@(Html.Kendo().Notification()
    .Name("Notification")
    .Position(p => p.Pinned(true).Top(30).Right(30))
    .Width(400)
)
<script>
    function filterConfig(e) {
        var parentIDValue = $("#Website").data("kendoDropDownList").value();
        return { parentID: parentIDValue };

    }
    function onWebsiteDataBound() {
        var control = $("#Website").data("kendoDropDownList");
        var controlLength = control.dataSource.data().length;
        if (controlLength > 0) {
            control.select(0);
            control.trigger("change");
        }
    }
    function onWebsiteChange() {
        $("#Config").data("kendoGrid").dataSource.read();
    }
    function onScanFull() {
        BeginRequestHandler();
         $.ajax({
            url: '@Url.Action("ScanFull", "Product")',
            type: 'GET',
            cache: false
         }).done(function (e) {
             EndRequestHandler();
             var response = e;
             var messageType = response.split('-')[0];
             var note = response.split('-')[1];
             var notification = $("#Notification").data("kendoNotification");
             notification.show(note, messageType);
         });
        return false;
    }
    function onScanWebsite() {
        var websiteIDValue = $("#Website").data("kendoDropDownList").value();
        BeginRequestHandler();
         $.ajax({
            url: '@Url.Action("ScanWebsite", "Product")',
             type: 'GET',
             data: {
                 websiteID: websiteIDValue,
             },
            cache: false
         }).done(function (e) {
             EndRequestHandler();
             var response = e;
             var messageType = response.split('-')[0];
             var note = response.split('-')[1];
             var notification = $("#Notification").data("kendoNotification");
             notification.show(note, messageType);
         });
        return false;
    }
    function onScanFullNoFilterProduct() {
        BeginRequestHandler();
         $.ajax({
            url: '@Url.Action("ScanFullNoFilterProduct", "Product")',
            type: 'GET',
            cache: false
         }).done(function (e) {
             EndRequestHandler();
             var response = e;
             var messageType = response.split('-')[0];
             var note = response.split('-')[1];
             var notification = $("#Notification").data("kendoNotification");
             notification.show(note, messageType);
         });
        return false;
    }
    function onScanWebsiteNoFilterProduct() {
        var websiteIDValue = $("#Website").data("kendoDropDownList").value();
        BeginRequestHandler();
         $.ajax({
            url: '@Url.Action("ScanWebsiteNoFilterProduct", "Product")',
             type: 'GET',
             data: {
                 websiteID: websiteIDValue,
             },
            cache: false
         }).done(function (e) {
             EndRequestHandler();
             var response = e;
             var messageType = response.split('-')[0];
             var note = response.split('-')[1];
             var notification = $("#Notification").data("kendoNotification");
             notification.show(note, messageType);
         });
        return false;
    }
    function onScanAutoNoFilterProduct() {
       BeginRequestHandler();
       $.ajax({
            type: 'GET',
            url: "@Url.Action("GetWebsiteByGroupNameAndCodeAndActiveToList", "Config")",
            data: {
            },
           success: function (Config) {
               for (var index in Config) {
                   $(Config[index]).each(function (iRec, item) {
                       setTimeout(function () {
                           var url = '/Product/ScanWebsiteNoFilterProductVoid?websiteID=' + item.ID;
                           window.open(url, '_blank');
                       }, index * 5000);                          
                   });
               }
               EndRequestHandler();
           }
        }).done(() => {

        });
        return false;
    }   
</script>
