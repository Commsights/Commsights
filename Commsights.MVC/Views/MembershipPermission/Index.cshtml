@{ ViewData["Title"] = "Menu Permission"; }

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Permission - Menu permission</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        @(Html.Kendo().DropDownList()
                     .Name("Membership")
                     .DataValueField("Id")
                     .DataTextField("FullName")
                     .HtmlAttributes(new { @class = "form-control" })
                      .Events(e => e.DataBound("onMembershipDataBound"))
                       .Filter(FilterType.StartsWith)
                     .DataSource(dataSource => dataSource.Ajax().Read(t => t.Action("GetAllToList", "Membership")))
                            )
                    </div>
                    <div class="col-sm-1">
                        <button type="button" class="btn btn-success" onclick="onSearch()">
                            <span class="fas fa-search"></span>
                        </button>
                    </div>
                    <div class='col-sm-1'>
                        <button type="button" class="btn btn-primary" onclick="onInitializationMenuPermission()">
                            <span class="fas fa-sync-alt"></span>
                        </button>
                    </div>
                    <div class='col-sm-2' style="display:flex; justify-content:start; align-items:center;">
                        <input id="chkAll" type="checkbox">
                        <p style="display:inline-block; font-size:14px; font-weight:bold; margin:0; padding-left:10px;">All</p>
                    </div>
                    <div class='col-sm-1'>
                        <button type="button" class="btn btn-primary btn-sm" onclick="onSaveAllMenuPermission()">
                            <span class="fas fa-save"></span>
                        </button>
                    </div>
                </div>
                <br />
                @(Html.Kendo().Grid<Commsights.Data.Models.MembershipPermission>()
.Name("MembershipPermission")
.Columns(columns =>
{
    columns.Command(command => { command.Edit().Text("&nbsp;").CancelText("&nbsp;").UpdateText("&nbsp;").IconClass("fas fa-edit").HtmlAttributes(new { style = "font-size: 16px; padding-left:16px; padding-top:6px; border-radius: 6px; font-weight:bold; width:50px;" }); command.Destroy().Text("&nbsp;").IconClass("fas fa-trash-alt").HtmlAttributes(new { style = "font-size: 16px; color:#ffffff; background-color:#d73925; padding-left:16px; padding-top:6px; border-radius: 6px; width:50px;" }); }).Width(150);
    columns.Bound(t => t.MenuID).Title("Menu").Width(300);
    columns.Bound(t => t.IsView).Title("View").Width(100);
})
.ToolBar(toolBar => toolBar.Search())
.Editable(editable => editable.Mode(GridEditMode.InLine))
.Sortable()
.Scrollable()
.Reorderable(r => r.Columns(true))
.Resizable(r => r.Columns(true))
.Pageable(pageable => pageable
.Refresh(true)
.PageSizes(true)
.ButtonCount(10))
.Excel(excel => excel
.FileName("Config.xlsx")
.Filterable(true)
.ProxyURL(Url.Action("ExportExcel", "Config"))
)
.Pdf(pdf => pdf
.AllPages()
.AvoidLinks()
.PaperSize("A4")
.Margin("2cm", "1cm", "1cm", "1cm")
.Landscape()
.RepeatHeaders()
.FileName("Config.pdf")
)
.HtmlAttributes(new { @class = "KendoGrid" })
.DataSource(dataSource => dataSource
.Ajax()
.PageSize(1000)
.Model(model =>
{
    model.Id(t => t.ID);
    model.Field(t => t.MenuID).Editable(false);
})
.Events(t => { t.RequestEnd("onGridRequestEnd"); })
.Read(t => t.Action("GetByMembershipIDToList", "MembershipPermission").Data("filterMembershipPermission"))
.Update(t => t.Action("Update", "MembershipPermission"))
)
)
            </div>
        </div>
    </div>
</div>

@(Html.Kendo().Notification()
    .Name("Notification")
    .Position(p => p.Pinned(true).Top(30).Right(30))
    .Width(400)
)

<script>
    function onGridRequestEnd(e) {
        if ((e.type == "create") || (e.type == "update") || (e.type == "destroy")) {
            var response = e.response;
            var messageType = response.split('-')[0];
            var note = response.split('-')[1];
            var notification = $("#Notification").data("kendoNotification");
            notification.show(note, messageType);
            $("#MembershipPermission").data("kendoGrid").dataSource.read();
        }
    }
    function filterMembershipPermission(e) {
        var membershipIDValue = $("#Membership").data("kendoDropDownList").value();
        return { membershipID: membershipIDValue };

    }
    function onMembershipDataBound() {
        var control = $("#Membership").data("kendoDropDownList");
        var controlLength = control.dataSource.data().length;
        if (controlLength > 0) {
            control.select(0);
            control.trigger("change");
        }
    }
    function onSearch() {
        $("#MembershipPermission").data("kendoGrid").dataSource.read();
    }
    function onInitializationMenuPermission() {
        BeginRequestHandler();
        var membershipIDValue = $("#Membership").data("kendoDropDownList").value();
          $.ajax(
              {
                  type: "POST",
                  datatype: "JSON",
                  url: '@Url.Action("InitializationMenuPermission", "MembershipPermission")',
                  data: { membershipID: membershipIDValue },
                  success: function (result) {
                      EndRequestHandler();
                var messageType = result.split('-')[0];
                var note = result.split('-')[1];
                var notification = $("#Notification").data("kendoNotification");
                notification.show(note, messageType);
                Search();
            },
            error: function (jqXHR, exception) {},
            complete: function () { },
              })

    }
    function onSaveAllMenuPermission() {
        BeginRequestHandler();
        var membershipIDValue = $("#Membership").data("kendoDropDownList").value();
        var isAllValue = document.getElementById('chkAll').checked;
        $.ajax(
            {
                type: "POST",
                datatype: "JSON",
                url: '@Url.Action("SaveAllMenuPermission", "MembershipPermission")',
                data: { membershipID: membershipIDValue, isAll: isAllValue },
                success: function (result) {
                    EndRequestHandler();
                    var messageType = result.split('-')[0];
                    var note = result.split('-')[1];
                    var notification = $("#Notification").data("kendoNotification");
                    notification.show(note, messageType);
                    Search();
                },
                error: function (jqXHR, exception) { },
                complete: function () { },
            });
    }
</script>
