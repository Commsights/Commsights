                            }
                            else
                            {
                                <tr style='background-color:#f1f1f1;'>
                            }
                            <td style='text-align:center;'>@item.DatePublishString</td>
                            <td style='text-align:center;'>@item.ArticleTypeName</td>
                            <td style='text-align:center;'>@item.IndustryName</td>
                            <td style='text-align:center;'>@item.CompanyName</td>
                            <td style='text-align:center;'>@item.ProductName</td>
                            <td style='text-align:center;'>@item.AssessName</td>
                            <td style='text-align:center;'>@item.Title</td>
                            <td style='text-align:center;'>@item.TitleEnglish</td>
                            <td style='text-align:center;'>@item.Media</td>
                            <td style='text-align:center;'>@item.MediaType</td>
                            <td style='text-align:center;'>@item.AdvertisementValue</td>
                            <td style='text-align:center;'>@item.Summary</td>
                        }
                    }
                }*@
            </tbody>
        </table>
    </div>
</div>
